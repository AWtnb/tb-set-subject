{
  "manifest_version": 3,
  "name": "Thunderbird-set-subject",
  "description": "Set subject from mail body",
  "version": "0.0.1",
  "author": "awtnb",
  "browser_specific_settings": {
    "gecko": {
      "id": "awtnb.thunderbird-set-subject@example.com",
      "strict_min_version": "128.0"
    }
  },
  "background": {
    "scripts": ["background.js"]
  },
  "compose_action": {
    "default_title": "Set subject"
  },
  "commands": {
    "_execute_compose_action": {
      "suggested_key": {
        "default": "Alt+Shift+S",
        "windows": "Alt+Shift+S"
      },
      "description": "Execute commands"
    }
  },
  "permissions": ["clipboardRead", "compose"]
}
